#compdef icarus
# vim: ft=sh

#   __|    \    _ \  |      _ \   __| __ __| __ __|
#  (      _ \     /  |     (   | (_ |    |      |
# \___| _/  _\ _|_\ ____| \___/ \___|   _|     _|

# zsh completion for icarus

# Optional debug logger: writes debug lines to $BASH_COMP_DEBUG_FILE if set
ICARUS_COMP_DEBUG=false
if "${ICARUS_COMP_DEBUG}"; then
    BASH_COMP_DEBUG_FILE='/tmp/icarus/completion/icarus_comp_debug.log'
fi

__icarus_debug() {
    local file="${BASH_COMP_DEBUG_FILE}"
    [[ -n "${file}" ]] && print -- "$*" >>"${file}"
}

_icarus() {
    __icarus_debug "\n========= _icarus starting ========="
    __icarus_debug "ORIGINAL words: '${words[*]}'"
    __icarus_debug "ORIGINAL CURRENT: ${CURRENT}"

    # Capturing previous param from $CURRENT
    local previousParamIdx="$((CURRENT - 1))"
    local previousParam="${words[${previousParamIdx}]}"

    # Count how many -v/--verbose occur before or at $CURRENT
    local count_removed=0
    for ((i=1; i <= CURRENT; i++)); do
        if [[ "${words[i]}" = '-v' || "${words[i]}" = '--verbose' ]]; then
            ((count_removed++))
        fi
    done

    # Build the filtered array
    local -a filtered_words
    filtered_words=("${(@)words:#(-v|--verbose)}")

    # Replace words with the filtered array
    words=("${filtered_words[@]}")

    # Adjust $CURRENT by the number of removed items that were before $CURRENT
    ((CURRENT -= count_removed))

    __icarus_debug "FILTERED words: '${words[*]}'"
    __icarus_debug "FILTERED CURRENT: ${CURRENT}"

    # We only want to parse up to $CURRENT in case the user moved the cursor backward
    words=("${(@)words[1,CURRENT]}")
    __icarus_debug "TRUNCATED words: '${words[*]}'"

    # Get last parameter, last character
    local lastParam="${words[-1]}"
    local lastChar="${lastParam[-1]}"
    __icarus_debug "previousParamIdx: ${previousParamIdx}"
    __icarus_debug "previousParam: '${previousParam}'"
    __icarus_debug "lastParam: '${lastParam}'"
    __icarus_debug "lastChar: '${lastChar}'"

    # We'll decide what to complete based on how many words have been typed
    #    words[1] is "icarus"
    #    words[2] might be "macos", "amazon", etc. (the "subcommand")
    #    words[3] might be "encrypt-volume", "auth-init", etc. (the "action")
    local subcmd=${words[2]}
    local action=${words[3]}

    local -a completions # array of possible completions
    local directive=0    # (if you use any directive bits)

    # Make Zsh complete file paths after certain words
    if [[ "${previousParam}" == '--filepath' || "${previousParam}" == '-p' ]]; then
        _files
        return
    fi

    # If the user typed only `icarus [TAB]`
    if ((CURRENT == 2)); then
        completions+=(
            'amazon:utilities for Amazon environment'
            'builder:utilities for software development'
            'macos:utilities for macOS'
            'unison:utilities for Unison daemon'
            'provision:utilities for provisioning and maintaining a workstation'
            '--update:update icarus cli to the latest version'
            '--verbose:increase output verbosity'
            '-v:increase output verbosity'
            '--version:display version information'
            '--help:show help message'
            '-h:show help message'
        )

    # If the user typed `icarus SUBCMD [TAB]`
    elif ((CURRENT == 3)); then
        case "${subcmd}" in
        amazon)
            completions+=(
                'auth-init:run midway authentication on localhost and optional remote DevDsk(s)'
                'auth-init-exp:run midway authentication express on localhost and optional remote DevDsk(s)'
                'midway-cookie:check the cookies validity'
                'devdsk-formation:run DevDsk Formation on a remote DevDsk'
                'update-hosts:update /etc/hosts file'
                'update-hosts-d:install a LaunchDaemon to update the hosts file every hour'
                'brazil-setup:creating case-sensitive volumes (`workplace` and `brazil-pkg-cache`)'
                'spurdog-ro:check membership for Spurdog Program'
                '--help:show help message'
                '-h:show help message'
            )
            ;;
        builder)
            completions+=(
                'create:initiate a new package in the current folder'
                'build-runtime:build the interpreter runtime'
                'path:creates build variables from a graph of dependencies defined by the graph portion of a path-name'
                'cache:provides utilities to manage the local package cache.'
                'build:create/re-create the project runtime environment'
                'release:run the full "release" pipeline'
                'format:run the formatting tools'
                'docs:generate user documentation'
                'test:run the automated test suite'
                'clean:clean the project runtime environment'
                'merge:merge user-space installed tools into runtimefarms exposed by builder path'
                'exec-tool:run a command inside the tool.runtimefarm environment'
                'exec-run:run a command inside the run.runtimefarm environment'
                'exec-dev:run a command inside the devrun.runtimefarm environment'
                'hook:the hook(s) for the builder'
                '--help:show help message'
                '-h:show help message'
            )
            ;;
        macos)
            completions+=(
                'find-unencrypted-volumes:find all unencrypted volumes'
                'make-encrypted-volume:make an encrypted APFS volume'
                'encrypt-volume:encrypt an APFS volume'
                'mount-volume:mount the specified volume at the specified mount point'
                'mount-at-startup:install a LaunchDaemon to mount the volume at System Startup'
                'icarus-update-daemon:install the icarus auto-update daemon (LaunchAgent)'
                '--help:show help message'
                '-h:show help message'
            )
            ;;
        unison)
            completions+=(
                'status:check the running status of each Unison profile'
                'restart:restart Unison profile(s) sync'
                'stop:stop Unison profile(s) sync'
                'clear-locks:clear Unison locks on localhost and an optional remote DevDsk'
                'start-at-startup:install a LaunchDaemon to start Unison at System Startup'
                'run-profiles:[DO NOT USE] internally used only to run Unison profiles'
                '--help:show help message'
                '-h:show help message'
            )
            ;;
        provision)
            completions+=(
                'dotfiles-update:update dotfiles from their specified repository'
                'envroot:install envroot in /opt/icarus'
                '--help:show help message'
                '-h:show help message'
            )
            ;;
        esac

    # If the user typed `icarus SUBCMD ACTION [TAB]`
    # This is where you'd define "options" for each sub-subcommand:
    else
        case "${subcmd}" in
        amazon)
            case "${action}" in
            auth-init)
                completions+=(
                    '-i:OPTIONAL takes multiple DevDsk IDs i.e. -i 1 2 3'
                    '--mw-args:OPTIONAL specify one arg to pass to mwinit i.e. --mw-arg=--ncl'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            auth-init-exp)
                completions+=(
                    '-i:OPTIONAL takes multiple DevDsk IDs i.e. -i 1 2 3'
                    '--mw-args:OPTIONAL specify one arg to pass to mwinit i.e. --mw-arg=--ncl'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            midway-cookie)
                completions+=(
                    '--filepath:OPTIONAL the filepath of the cookie file, if none then ~/.midway/cookie'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            devdsk-formation)
                completions+=(
                    '-i:REQUIRED the DevDsk ID'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            update-hosts)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            update-hosts-d)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            brazil-setup)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            spurdog-ro)
                completions+=(
                    '-u:REQUIRED username to check Spurdog Program membership'
                    '--auth:OPTIONAL run mwinit before querying'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            esac
            ;;
        builder)
            case "${action}" in
            build-runtime)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            create)
                completions+=(
                    '-n:REQUIRED the package name in PascalCase'
                    '-l:REQUIRED the package name language'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            hook)
                completions+=(
                    '--build:create/re-create the project runtime environment'
                    '--release:run the full "release" pipeline'
                    '--format:run the formatting tools'
                    '--docs:generate user documentation'
                    '--test:run the automated test suite'
                    '--clean:remove all build artifacts from the workspace'
                    '--isort:sort python imports with isort'
                    '--black:re-format python code with black'
                    '--flake8:run static analysis with flake8'
                    '--mypy:type-check the codebase with mypy'
                    '--shfmt:format shell scripts with shfmt'
                    '--whitespaces:normalize mixed or excessive whitespace'
                    '--trailing:remove trailing whitespace'
                    '--eofnewline:ensure files end with a single newline'
                    '--eolnorm:normalize line endings to LF'
                    '--gitleaks:scan for secrets with gitleaks'
                    '--pytest:execute the unit/integration-test suite via pytest'
                    '--sphinx:generate user documentation with sphinx'
                    '--readthedocs:generate readthedocs requirements'
                    '--pypi:publish package artifacts to PyPI (requires ICARUS_PYPI_TEST_API_TOKEN and ICARUS_PYPI_PROD_API_TOKEN)'
                    '--merge:merge user-space installed tools into runtimefarms exposed by builder path'
                    '--exec-tool:run a command inside the tool.runtimefarm environment'
                    '--exec-run:run a command inside the run.runtimefarm environment'
                    '--exec-dev:run a command inside the devrun.runtimefarm environment'
                    '--bumpver:interactively bump package version (major, minor, or patch)'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            build)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            clean)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            release)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            format)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            test)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            docs)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            merge)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            exec-tool)
                completions+=(
                    'EXEC_CMD:REQUIRED command to run inside the tool.runtimefarm environment'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            exec-run)
                completions+=(
                    'EXEC_CMD:REQUIRED command to run inside the run.runtimefarm environment'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            exec-dev)
                completions+=(
                    'EXEC_CMD:REQUIRED command to run inside the devrun.runtimefarm environment'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            path)
                completions+=(
                    'platform-identifier:returns the name of the current platform'
                    'workspace.root:returns the path to the current workspace root'
                    'workspace.src-root:returns the path to the current workspace source directory'
                    'workspace.build-root:returns the path to the current workspace build directory'
                    'workspace.user-space-root:returns the path to the runtime user-space prefix directory'
                    'pkg.language:returns the language of the current package'
                    'pkg.name-pascal:returns the name of the current package in PascalCase'
                    'pkg.name-snake:returns the name of the current package in snake_case'
                    'pkg.name-dashed:returns the name of the current package in dashed-case'
                    'pkg.version:returns the version of the current package in SemVer format AKA MAJOR.MINOR.PATCH'
                    'pkg.version-major:returns the major version of the current package in SemVer format'
                    'pkg.version-minor:returns the minor version of the current package in SemVer format'
                    'pkg.version-patch:returns the patch version of the current package in SemVer format'
                    'pkg.runtimefarm:produces the location of a symlink farm and creates build variables for the current package'
                    'pkg.pythonhome:creates colon-delimited list of PYTHONHOME paths for the current package'
                    'pkg.bin:creates colon-delimited list of bin directory for the current package'
                    'tool.name:creates semicolon-delimited list of the names of all packages for the build-tools dependencies'
                    'tool.version:creates semicolon-delimited list of the names of all packages plus full versions for the build-tools dependencies'
                    'tool.runtimefarm:produces the location of a symlink farm and creates build variables for the build-tools dependencies'
                    'tool.pythonhome:creates colon-delimited list of PYTHONHOME paths for the build-tools dependencies'
                    'tool.bin:creates colon-delimited list of bin directory for the build-tools dependencies'
                    'run.name:creates semicolon-delimited list of the names of all packages for the runtime dependencies'
                    'run.version:creates semicolon-delimited list of the names of all packages plus full versions for the runtime dependencies'
                    'run.runtimefarm:produces the location of a symlink farm and creates build variables for the runtime dependencies'
                    'run.pythonhome:creates colon-delimited list of PYTHONHOME paths for the runtime dependencies'
                    'run.bin:creates colon-delimited list of bin directory for the runtime dependencies'
                    'run_excluderoot.name:creates semicolon-delimited list of the names of all packages for the runtime dependencies excluding the current package'
                    'run_excluderoot.version:creates semicolon-delimited list of the names of all packages plus full versions for the runtime dependencies excluding the current package'
                    'run_excluderoot.runtimefarm:produces the location of a symlink farm and creates build variables for the runtime dependencies excluding the current package'
                    'run_excluderoot.pythonhome:creates colon-delimited list of PYTHONHOME paths for the runtime dependencies excluding the current package'
                    'run_excluderoot.bin:creates colon-delimited list of bin directory for the runtime dependencies excluding the current package'
                    'devrun.name:creates semicolon-delimited list of the names of all packages for the runtime and development dependencies'
                    'devrun.version:creates semicolon-delimited list of the names of all packages plus full versions for the runtime and development dependencies'
                    'devrun.runtimefarm:produces the location of a symlink farm and creates build variables for the runtime and development dependencies'
                    'devrun.pythonhome:creates colon-delimited list of PYTHONHOME paths for the runtime and development dependencies'
                    'devrun.bin:creates colon-delimited list of bin directory for the runtime and development dependencies'
                    'devrun_excluderoot.name:creates semicolon-delimited list of the names of all packages for the runtime and development dependencies excluding the current package'
                    'devrun_excluderoot.version:creates semicolon-delimited list of the names of all packages plus full versions for the runtime and development dependencies excluding the current package'
                    'devrun_excluderoot.runtimefarm:produces the location of a symlink farm and creates build variables for the runtime and development dependencies excluding the current package'
                    'devrun_excluderoot.pythonhome:creates colon-delimited list of PYTHONHOME paths for the runtime and development dependencies excluding the current package'
                    'devrun_excluderoot.bin:creates colon-delimited list of bin directory for the runtime and development dependencies excluding the current package'
                    '--list:list all the available path names'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            cache)
                completions+=(
                    'cache-root:returns the path to the package cache root'
                    'clean:clean up the packages cached on local disk'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            esac
            ;;
        macos)
            case "${action}" in
            find-unencrypted-volumes)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            make-encrypted-volume)
                completions+=(
                    '-n:REQUIRED name of the encrypted volume'
                    '-q:OPTIONAL size of the encrypted volume in Gb i.e. -q 50g'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            encrypt-volume)
                completions+=(
                    '-n:REQUIRED name of the volume to encrypt'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            mount-volume)
                completions+=(
                    '-n:REQUIRED name of the volume to mount'
                    '-p:REQUIRED mount point for the volume'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            mount-at-startup)
                completions+=(
                    '-n:REQUIRED name of the volume to mount'
                    '-p:REQUIRED mount point for the volume'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            icarus-update-daemon)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            esac
            ;;
        unison)
            case "${action}" in
            status)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            restart)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            stop)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            clear-locks)
                completions+=(
                    '-i:OPTIONAL the DevDsk ID'
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            start-at-startup)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            run-profiles)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            esac
            ;;
        provision)
            case "${action}" in
            dotfiles-update)
                completions+=(
                    '--help:show help message'
                    '-h:show help message'
                )
                ;;
            esac
            ;;
        esac
    fi

    # We have an array of possible completions in $completions.
    # Use _describe (or compadd) to present them.
    # Format is "value:description", so no need for a TAB.
    # If you prefer 'compadd', you can do that too.
    __icarus_debug "Final completions: ${completions[*]}"
    if [[ -n "${completions}" ]]; then
        _describe -t icarus 'completions' completions
        return 0
    else
        # If no completions found, you can optionally do file completion or
        # just return 1 to let Zsh try normal completions.
        __icarus_debug "No completions found; fallback to file completion"
        # _files
        return 1
    fi
}

# Register the _icarus function for the `icarus` command
compdef _icarus icarus
